{
  "name": "@deskpro-apps/jamf",
  "title": "Jamf Pro",
  "description": "View your enrolled Apple devices while interacting with tickets to make management and support easier.",
  "version": "1.0.9",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "serveUrl": "https://apps-cdn.deskpro-service.com/__name__/__version__",
  "targets": [{ "target": "user_sidebar", "entrypoint": "index.html" }],
  "appStoreUrl": "https://www.deskpro.com/product-embed/apps/jamf-pro",
  "entityAssociations": {
    "linkedJamfDevices": {
      "entity": "person",
      "type": "external_id",
      "title": "Linked Jamf Devices"
    }
  },
  "settings": {
    "instance_url": {
      "title": "Jamf Pro Instance URL",
      "description": "Enter the URL of your Jamf Pro instance, or \"https://<my_company>.jamfcloud.com\"",
      "validationPattern": "^https?:\\/\\/.+\\..+\\w$",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 10
    },
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 30
    },
    "verify_settings": {
      "title": "",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/verify_settings" },
      "isRequired": false,
      "isBackendOnly": true,
      "order": 40
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "__instance_url__/.*",
        "methods": ["GET", "POST"],
        "timeout": 20
      }
    ]
  }
}
